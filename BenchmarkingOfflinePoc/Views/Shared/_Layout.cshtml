@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnv
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link id="favicon-shortcut-icon" rel="shortcut icon" href="~/favicon.ico?v=1" type="image/x-icon" />
    <link id="favicon-icon" rel="icon" href="~/favicon.ico?v=1" type="image/x-icon" />
    <!-- CODELAB: Add iOS meta tags and icons -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="#CC0000">
    <meta name="apple-mobile-web-app-title" content="This is a POC to test offline upload functionality in the Benchmarking application">
    <meta name="description" content="A sample weather app">
    <link rel="apple-touch-icon" href="~/img/test-icon-b-192x192.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#CC0000">
    <title>Offline POC</title>
    <base href="~/" />
    @if (hostingEnv.EnvironmentName != "Development")
    {
        <link href="~/dist/client.css" asp-append-version="true" rel="stylesheet">
    }
    <!-- Prompt a message in the browser if users disabled JS -->
    <noscript>Your browser does not support JavaScript!</noscript>
</head>
<body>
    @RenderBody()

    @if (hostingEnv.EnvironmentName != "Development")
    {
        @RenderSection("prodScripts", required: false)
        IgnoreSection("devScripts");
    }
    else
    {
        @RenderSection("devScripts", required: false)
        IgnoreSection("prodScripts");
    }

</body>
</html>
